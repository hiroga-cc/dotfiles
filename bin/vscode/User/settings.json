{
    "breadcrumbs.enabled": true, // パンくずリスト
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/.git": false,
    },
    "git.autofetch": true,
    "window.zoomLevel": 0,
    "workbench.sideBar.location": "right",
    // languages
    "java.configuration.checkProjectSettingsExclusions": false,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "javascript.updateImportsOnFileMove.enabled": "never",
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "on",
        "editor.acceptSuggestionOnEnter": "off"
    },
    "[python]": {
        "editor.formatOnSave": true
    },
    // Python PEP8:
    // E501: 80 characters are not too long in my environment.  
    "python.formatting.autopep8Args": [
        "--ignore=E501",
    ],
    "python.linting.pycodestyleArgs": [
        "--ignore=E501",
    ],
    "python.formatting.provider": "autopep8", // black is pre-release
    // Python: Linting: Using pylint and flake8 both. Ther overlaped some but some does not.
    // http://books.agiliq.com/projects/essential-python-tools/en/latest/linters.html
    // https://www.reddit.com/r/Python/comments/82hgzm/any_advantages_of_flake8_over_pylint/
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    // extensions
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
